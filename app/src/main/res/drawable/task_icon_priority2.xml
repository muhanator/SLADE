                    <stroke
                            android:width="2dp"
                            android:color="@color/taskColorPriority2Accent2" />
                    <corners android:radius="20dp" />
                    <size
                            android:width="175dp"
                            android:height="100dp" />

                </shape>
            </item>
        </layer-list>
    </item>
