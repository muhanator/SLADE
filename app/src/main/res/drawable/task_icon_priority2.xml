        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="@color/icon_shadow" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="8dp">
                <shape>
                    <gradient
                            android:angle="135"

                            android:endColor= "@color/taskColorPriority2Accent"

                            android:startColor="@color/taskColorPriority2"
